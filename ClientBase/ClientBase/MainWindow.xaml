        xmlns:local="clr-namespace:ClientBase"
        mc:Ignorable="d"
        Title="ClientBase" Height="450" Width="800">
    <Grid>
        <Button Content="Log in" HorizontalAlignment="Left" Margin="237,334,0,0" VerticalAlignment="Top" Width="279" Click="Button_Click"/>
